<Window
    x:Class="MVVMatic.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MVVMatic"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="5"
            Margin="10"
            HorizontalAlignment="Center"
            FontSize="24"
            FontWeight="Bold"
            Text="MVVMatic" />
        <StackPanel
            Grid.Row="1"
            Grid.RowSpan="5"
            Grid.Column="1"
            Margin="10"
            Orientation="Vertical">
            
            <StackPanel
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Margin="5"
                    Content="Selecteer Solution"
                    Click="BtnSelecteerSolution"
                    />

                <TextBox
                    Width="120"
                    Margin="2"
                    Text="{Binding Solution, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">

                <TextBlock
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Text="DataBase String" />
                <TextBox
                    Width="120"
                    Margin="2"
                    Text="{Binding DataBaseString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>


            <StackPanel
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">

                <TextBlock
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Text="DataBase" />
                <TextBox
                    Width="120"
                    Margin="2"
                    Text="{Binding DatabaseName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Text="Schema/Folder" />
                <TextBox
                    Width="120"
                    Margin="2"
                    Text="{Binding SchemaFolder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <StackPanel
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Text="Table/Model" />
                <TextBox
                    Width="120"
                    Margin="2"
                    Text="{Binding TableModel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <DataGrid
                x:Name="KolommenGrid"
                Grid.Row="4"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Height="150"
                Margin="5"
                AutoGenerateColumns="False"
                CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding KolomNaam}"
                        Header="Kolomnaam" />
                    <DataGridComboBoxColumn
                        Width="100"
                        Header="Type"
                        ItemsSource="{x:Static local:MainWindow.SupportedTypes}"
                        SelectedItemBinding="{Binding Type}" />
                    <DataGridCheckBoxColumn
                        Width="50"
                        Binding="{Binding IsNullable}"
                        Header="Null?" />
                </DataGrid.Columns>
            </DataGrid>


            <StackPanel Margin="5" Orientation="Horizontal">
                <Button
                    Margin="5"
                    Click="BtnVoegKolomToe_Click"
                    Content="Voeg kolom toe" />
                <Button
                    Margin="5"
                    Click="BtnGenereerAllCodePreview_Click"
                    Content="Genereer All Code Preview" />

            </StackPanel>
        </StackPanel>



        <TextBox
            x:Name="OutputTextBox"
            Grid.Row="1"
            Grid.RowSpan="5"
            Grid.Column="3"
            Width="250"
            Height="300"
            Margin="5"
            AcceptsReturn="True"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />

    </Grid>
</Window>
